.contianer {
   width: 100%;
   height: 100%;
   background-color: rgba(169, 169, 169, 0.1);
   font-size: 24rpx;
   color: #666666;
   font-family: Arial, Helvetica, sans-serif;
}

.top-bg {
   width: 100%;
   height: 400rpx;
   background-color: dodgerblue;
}

.mid-box {
   background-color: #fff;
   position: relative;
   top: -200rpx;
   height: 500rpx;
   width: 90%;
   margin: 0 auto;
   padding: 0;
   text-align: center;
}
.user-box {
   position: relative;
   top: -100rpx;
}

.user-icon {
   width: 200rpx;
   height: 200rpx;
   border-radius: 100%;
   background-color: dodgerblue;
   border: solid 1px #fff;
   margin: 0 auto;
   color: #fff;
   font-size: 48rpx;
   line-height: 200rpx;
}
.user-name {
   font-size: 32rpx;
   color: #333333;
   font-weight: 600;
   margin: 16px 0 0 0;
}

.user-worker {
   display: inline-block;
   background-color: darkgray;
   color: #fff;
   padding: 8rpx;
   margin: 10rpx 0;
}