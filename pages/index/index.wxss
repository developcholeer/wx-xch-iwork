/* 页面容器样式 */
.contianer {
   width: 100%;
   height: 100%;
   background-color:#f7f7f7;
   font-size: 24rpx;
   color: #666;
   font-family: Arial, Helvetica, sans-serif;
}
/* 顶部背景样式 */
.top-bg {
   width: 100%;
   height: 400rpx;
   background-color: #1890ff;
}

.main-box {
   background-color: #fff;
   position: relative;
   top: -200rpx;
   height: 500rpx;
   width: 90%;
   margin: 0 auto;
   padding: 0;
   text-align: center;
}
.main-content {
   position: relative;
   top: -100rpx;
}
/* 顶部用户头像、名称样式 */
.user-icon {
   width: 200rpx;
   height: 200rpx;
   border-radius: 100%;
   background-color: #1890ff;
   border: solid 1px #fff;
   margin: 0 auto;
   color: #fff;
   font-size: 48rpx;
   line-height: 200rpx;
}
.user-name {
   font-size: 32rpx;
   color: #333;
   font-weight: 600;
   margin: 20rpx 0 0 0;
}

.user-worker {
   display: inline-block;
   background-color: #90a4ae;
   color: #fff;
   padding: 8rpx;
   margin: 10rpx 0;
}
/* 折叠面板全局样式 */
.collapse-box{
   text-align: left;
}